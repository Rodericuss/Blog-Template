{{#each errosPost}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Nova postagem: </h3>
<div class="card">
    <Div class="card-body">
  <form action="/admin/postagem/nova" method="POST">
    <label for="titulo">Título: </label>
    <input type="text" name="titulo"  class="form-control" />
    <label for="slug">Slug: </label>
    <input type="text" name="slug"  class="form-control" />
    <label for="descricao">Descrição: </label>
    <input type="text" name="descricao"  class="form-control" />
    <label for="conteudo">Conteúdo: </label>
    <textarea class="form-control" name="conteudo"></textarea>
    <label for="categoria">Categoria: </label>
    <select name="categoria" class="form-select">
{{#each categorias}}
    <option value="{{_id}}">{{nome}}</option>
{{else}}
    <option value="">Nenhuma categoria registrada</option>
{{/each}}
    </select>
    <button type="submit" class="btn btn-success">Criar postagem</button>
  </form>
</div>
</div>
